<nav class="background-image">
    <div class="header-background" id="navbar-heading-wrapper">
        <h1 class="text-center display-3">To-Do List</h1>
    </div>
</nav>

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-sm list-column">
            <h2 class="text-center my-3">Incomplete</h2>
            <ul class="mt-4">
                {{#each todos}}
                    {{#unless done}}
                        {{> todos/todo-block done=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm list-column">
            <h2 class="text-center my-3">Complete</h2>
            <ul class="mt-4">
                {{#each todos}}
                    {{#if done}}
                        {{> todos/todo-block done=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container text-center my-5">
    <form class="create-todo">
        <div class="input-group mb-3">
            <input id="todo-text" type="text" name="todoText" class="form-control form-control-lg" placeholder="New To-Do" aria-label="New To-Do" aria-describedby="button-addon">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon"><i class="fas fa-plus mx-3"></i></button>
            </div>
        </div>
    </form>
</div>

